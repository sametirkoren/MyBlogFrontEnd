@model List<BlogListModel>

<a asp-action="Create" asp-controller="Blog" asp-area="Admin"  class="btn btn-outline-info btn-sm my-2">Yeni Blog Yaz</a>
<table class="table table-bordered table-hover table-sm">
    <thead>
        <tr>
            <th>Blog Başlık</th>
            <th>Kategori İşlemleri</th>
            <th>İşlemler</th>
            
        </tr>
    </thead>
    <tbody>
       @foreach (var item in Model)
       {
            <tr>
                <td scope="row">@item.Title</td>
                <td><a asp-action="AssignCategory" asp-route-id="@item.Id">Kategori Ata</a></td>
                <td> <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a> <a asp-action="Delete" asp-route-id="@item.Id"  class="btn btn-warning btn-sm">Sil</a> </td>
               
            
            </tr>
       }
       
    </tbody>
</table>