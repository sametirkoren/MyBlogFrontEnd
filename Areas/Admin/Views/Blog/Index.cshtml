@model List<BlogListModel>

<a asp-action="Create" asp-controller="Blog" asp-area="Admin"  class="btn btn-info btn-sm">Yeni Blog Yaz</a>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Blog Başlık</th>
            <th>Blog İşlemler</th>
            
        </tr>
    </thead>
    <tbody>
       @foreach (var item in Model)
       {
            <tr>
                <td scope="row">@item.Title</td>
                <td> <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a> <a href=""  class="btn btn-warning btn-sm">Sil</a> </td>
               
            
            </tr>
       }
       
    </tbody>
</table>