@model List<CategoryListModel>

<a asp-action="Create" asp-controller="Category" asp-area="Admin"  class="btn btn-outline-info btn-sm my-2">Yeni Kategori Yaz</a>
<table class="table table-bordered table-hover table-sm">
    <thead>
        <tr>
            <th>Kategori Adı</th>
            <th>Blog İşlemler</th>
            
        </tr>
    </thead>
    <tbody>
       @foreach (var item in Model)
       {
            <tr>
                <td scope="row">@item.Name</td>
                <td> <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a> <a asp-action="Delete" asp-route-id="@item.Id"  class="btn btn-warning btn-sm">Sil</a> </td>
               
            
            </tr>
       }
       
    </tbody>
</table>