 @model List<BlogListModel>

@if(ViewBag.ActiveCategory!=null){
@await Component.InvokeAsync("GetCategoryName",new {@categoryId=(int)ViewBag.ActiveCategory})
}

@if(!string.IsNullOrWhiteSpace(ViewBag.SearchString)){
   @await Component.InvokeAsync("Search",new {@s=ViewBag.SearchString})
}

 @foreach (var blog in Model)
 {
          <div class="col-12">
            <div class="post-card -small -horizontal">
              <a class="card__cover" asp-action="BlogDetail" asp-route-id="@blog.Id" tabindex="0"><getblogimage id="@blog.Id"></getblogimage></a>
              <div class="card__content">
                <h5 class="card__content-category">Samet İrkören</h5>
                  <a class="card__content-title" asp-action="BlogDetail" asp-route-id="@blog.Id" tabindex="0">@blog.Title</a>
                <div class="card__content-info">
                  <div class="info__time"><i class="far fa-clock"></i>
                    <p>@blog.PostedTime.ToLongDateString()</p>
                  </div>
                 
                </div>
                <p class="card__content-description">@blog.ShortDescription</p>
              </div>
            </div>
          </div>

 }


 
