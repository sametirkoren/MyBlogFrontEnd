@model List<BlogListModel>


        @foreach (var item in Model)
        {
               <div class="trending-post">
                                  <div class="trending-post_image">
                                     <getblogimage id="@item.Id"></getblogimage>
                                  </div>
                                  <div class="trending-post_content">
                                    <h5>Samet İrkören</h5>
                                        <a asp-action="BlogDetail" asp-route-id="@item.Id"  asp-controller="Home">@item.Title</a>
                                    <div class="info__time"><i class="far fa-clock"></i>
                                      <p>@item.PostedTime.ToLongDateString()</p>
                                    </div>
                                  </div>
                                </div>
        }
 

